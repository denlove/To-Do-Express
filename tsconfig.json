{
    "compilerOptions": {
        "target": "ES6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": false,
        "esModuleInterop": true,
        "module": "CommonJS",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "outDir": "dist"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
